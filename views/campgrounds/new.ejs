<%- include("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Create a New Campground</h1>
    </div>
    
    <div class="col-12 col-md-8 col-lg-6 text-center mt-3">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="campground name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="campground price" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="campground description" required>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
        </form>
        <a href="/campgrounds" class="btn btn-link mt-2">Go Back</a>
    </div>  
</div>

<%- include("../partials/footer") %>